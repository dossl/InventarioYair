@model InventarioOtro.Models.FotoProducto

@{
    ViewBag.Title = "Eliminar Foto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>Eliminar</h4>

<h3>Seguro desea eliminar esta foto del producto?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imagen
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageName)
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-6">
            <img src=@Model.FileName width="100%" height="100%"/>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="row" style="margin-top: 25px">
            <div class="col-md-offset-2 col-md-1">
                <input type="submit" value="Borrar" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-2 col-md-2">
                <a role="button">@Html.ActionLink("Regresar", "ListUpload", new { Id = Model.ProductoId }, new { @class = "btn btn-primary", @title = "Regresar" })</a>
            </div>
        </div>
    }
</div>
