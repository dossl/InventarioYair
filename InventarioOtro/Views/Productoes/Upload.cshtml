@model InventarioOtro.ViewModels.FotoProductoViewModel

@{
    ViewBag.Title = "Subir Foto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>Subir Foto</h4>

@using (Html.BeginForm("CreateUpload", "Productoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Foto para Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Producto.ID)
        <div class="form-group">
             @Html.Label(Model.Producto.Clote, "Producto: " + Model.Producto.Clote, htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ProductoId", Model.Producto.ID, new { @style="display: none"})
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Subir Foto", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                  <label for="file1" class="subir btn btn-primary">
            <i class="fas fa-cloud-upload-alt"></i> Buscar
        </label>
        <input id="file1" onchange='cambiar()' name="FileUpload1" type="file" required="true" style='display: none;'/>
        <div id="info"></div>
               
                

            </div>
        </div>
     
      
        

        <div class="row" style="margin-top: 20px">
            <div class="col-md-offset-2 col-md-1">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-2 col-md-2">
                <a role="button">@Html.ActionLink("Regresar", "ListUpload", new { Id = Model.Producto.ID }, new { @class = "btn btn-primary", @title = "Regresar" })</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function cambiar(){
            var pdrs = document.getElementById('file1').files[0].name;
            document.getElementById('info').innerHTML = pdrs;
        }

        
    </script>
}
